.step-bar {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .step-item {
    display: flex;
    align-items: center;
    position: relative;
    margin-bottom: 20rpx;
  }
  
  .icon {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 32rpx;
  }
  
  .step-icon {
    width: 24rpx;
    height: 24rpx;
  }
  
  .step-content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 14rpx;
    margin-right: 22rpx;
  }
  
  .step-tail {
    position: absolute;
    top: 38rpx;
    left: 12rpx;
    width: 2rpx;
    height: calc(100% - 38rpx);
    background-color: #e4e7ed;
    z-index: -1;
  }
  
  .step-tail-img {
    width: 2rpx;
    height: calc(100% - 38rpx);
  }
  
  .step-node {
    width: 24rpx;
    height: 24rpx;
    background-color: #e4e7ed;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .step-node.active {
    background-color: rgb(11, 189, 135);
  }
  
  .step-label {
    font-size: 14rpx;
    color: #ffffff;
  }
  
  .step-title {
    margin-top: 6rpx;
    font-size: 14rpx;
  }
  